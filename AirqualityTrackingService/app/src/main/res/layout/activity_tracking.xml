<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#FFFFFF"
    tools:context=".TrackingActivity">

    <Button
        android:id="@+id/gpsButton"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginBottom="360dp"
        android:background="#ADEFD1"
        android:text="@string/gpsButton"
        android:textColor="@color/black"
        app:backgroundTint="#ADEFD1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applicationStatus" />

    <TextView
        android:id="@+id/applicationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="152dp"
        android:text="Application is running"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/gpsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>